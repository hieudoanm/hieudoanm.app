{
  "name": "@chess/api",
  "version": "0.0.1",
  "description": "Chess - API",
  "main": "dist/server.js",
  "repository": "git@github.com:hieudoanm/app.chess.git",
  "author": "hieudoanm <hieumdoan@gmail.com>",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist && prisma generate && (yarn docs:swagger:html || true)",
    "build": "webpack --mode=production",
    "start": "node .",
    "start:prod": "node .",
    "dev": "kill-port 8080 && concurrently \"nodemon\" \"nodemon -x yarn docs\"",
    "docs": "yarn docs:swagger:json && yarn docs:swagger:yaml && yarn docs:postman",
    "docs:postman": "openapi2postmanv2 -s docs/swagger/swagger.yaml -o docs/postman/collection.json",
    "docs:swagger:json": "tsoa spec-and-routes",
    "docs:swagger:yaml": "json2yaml ./docs/swagger/swagger.json > ./docs/swagger/swagger.yaml",
    "docs:swagger:html": "redocly build-docs ./docs/swagger/swagger.json --output ./public/index.html --title 'chess.com - api'",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest.config.ts",
    "test:newman": "newman run ./docs/newman/collection.json -e ./docs/newman/environment.json"
  },
  "dependencies": {
    "@apollo/datasource-rest": "6.2.2",
    "@apollo/server": "4.9.5",
    "@graphql-tools/merge": "9.0.0",
    "axios": "1.6.0",
    "chess.js": "1.0.0-beta.6",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "dotenv-expand": "10.0.0",
    "express": "4.18.2",
    "graphql": "16.8.1",
    "graphql-depth-limit": "1.1.0",
    "helmet": "7.0.0",
    "http-errors": "2.0.0",
    "ioredis": "5.3.2",
    "morgan": "1.10.0",
    "pino": "8.16.1",
    "pino-pretty": "10.2.3",
    "tsoa": "5.1.1"
  },
  "devDependencies": {
    "@prisma/client": "5.5.2",
    "@redocly/cli": "1.4.0",
    "@types/compression": "1.7.4",
    "@types/cookie-parser": "1.4.5",
    "@types/cors": "2.8.15",
    "@types/graphql-depth-limit": "1.1.5",
    "@types/http-errors": "2.0.3",
    "@types/jest": "29.5.7",
    "@types/morgan": "1.9.8",
    "@types/node": "20.8.10",
    "@types/supertest": "2.0.15",
    "@types/webpack-node-externals": "3.0.3",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.10.0",
    "@webpack-cli/generators": "3.0.7",
    "concurrently": "8.2.2",
    "eslint": "8.53.0",
    "eslint-plugin-github": "4.10.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-security": "1.7.1",
    "eslint-plugin-sonarjs": "0.23.0",
    "eslint-plugin-unicorn": "49.0.0",
    "jest": "29.7.0",
    "kill-port": "2.0.1",
    "newman": "6.0.0",
    "nodemon": "3.0.1",
    "openapi-to-postmanv2": "4.18.0",
    "prettier": "3.0.3",
    "prisma": "5.5.2",
    "prisma-dbml-generator": "0.10.0",
    "prisma-docs-generator": "0.8.0",
    "prisma-json-schema-generator": "4.0.0",
    "prisma-markdown": "1.0.6",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.0",
    "ts-node": "10.9.1",
    "typescript": "5.2.2",
    "webpack": "5.89.0",
    "webpack-cli": "5.1.4",
    "webpack-node-externals": "3.0.0"
  }
}
