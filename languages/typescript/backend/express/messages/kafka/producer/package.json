{
  "name": "@kafka/producer",
  "version": "0.0.1",
  "description": "Kafka Producer",
  "main": "dist/server.js",
  "repository": "git@github.com:houseoftypescript/express-kafka-template.git",
  "author": "hieudoanm <hieumdoan@gmail.com>",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production",
    "dev": "kill-port 8080 && concurrently \"nodemon\" \"nodemon -x yarn docs\"",
    "docs": "yarn docs:swagger:json && yarn docs:swagger:yaml && yarn docs:postman",
    "docs:postman": "node ./scripts/postman",
    "docs:swagger:json": "tsoa spec-and-routes",
    "docs:swagger:yaml": "json2yaml ./docs/apis/swagger.json > ./docs/apis/swagger.yaml",
    "lint": "eslint . --fix --ext .ts",
    "start": "node .",
    "test": "jest",
    "watch": "webpack --watch"
  },
  "dependencies": {
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "kafkajs": "2.2.4",
    "pino": "8.16.1",
    "tsoa": "5.1.1"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/http-errors": "2.0.4",
    "@types/jest": "29.5.7",
    "@types/node": "20.8.10",
    "@types/webpack-node-externals": "3.0.3",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.10.0",
    "eslint": "8.53.0",
    "jest": "29.7.0",
    "json2yaml": "1.1.0",
    "kill-port": "2.0.1",
    "nodemon": "3.0.1",
    "rimraf": "5.0.5",
    "swagger2-to-postmanv2": "2.1.0",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.0",
    "ts-node": "10.9.1",
    "typescript": "5.2.2",
    "webpack": "5.89.0",
    "webpack-cli": "5.1.4",
    "webpack-node-externals": "3.0.0"
  }
}
